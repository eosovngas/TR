<div class="container"> 
  <div class="row"> 
    <div class="col-md-6 col-md-offset-3">
      <div class= "jumbotron">
        <legend><h2>Iniciar Sesión</h2></legend>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <div class="field">
              <%= f.label :email, class: "control-label" %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "tucorreo@technorestore.cl" %>
            </div>
          </div>  

          <div class="form-group">
            <div class="field">
              <%= f.label :contraseña, class: "control-label" %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Tu contraseña"%>
            </div>
          </div>  

          <div class="form-group">
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me%>
                <%= f.label :Recordar_Contraseña %>
              </div>
            <% end -%>
          </div>  

          <div class="actions">
            <%= f.submit "Iniciar Sesión", class: "btn btn-success" %>
          </div>
        <% end %>
        
        <br/> <%= render "devise/shared/links" %>
        
      </div>
    </div>
  </div>
</div>    